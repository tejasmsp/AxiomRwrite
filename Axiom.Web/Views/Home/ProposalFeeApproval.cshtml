@model ProposalFeesApprovalModel
@using Axiom.Web.Models
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AXIOM-Proposal Fee Approval</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse fixed">
        <div class="navbar-header">
            <a class="navbar-brand" href="index.html"><img src="@ProjectSession.CompanyUserDetail.ImagePath" alt=""></a>
            <ul class="nav navbar-nav pull-right visible-xs-block">
                <li><a data-toggle="collapse" data-target="#navbar-mobile"><i class="icon-tree5"></i></a></li>
            </ul>
        </div>
    </div>


    @if (Model.operation == "e" && Model.isUpdated == false)
    {
        <div class="row pt-20">
            <div class="col-md-12 text-center">
                <b>You can edit Proposal Fees Scope and send it to Account Executive. Fill below fields and click on submit.</b>
            </div>
        </div>

        using (Html.BeginForm("UpdateProposalFeeApproval", "Home", FormMethod.Post, new { @id = "frmService" }))
        {
            @Html.HiddenFor(m => m.accExecutiveEmail);
            @Html.HiddenFor(m => m.accExecutiveName);
            @Html.HiddenFor(m => m.orderno);
            @Html.HiddenFor(m => m.location);
            @Html.HiddenFor(m => m.pages);
            @Html.HiddenFor(m => m.amount);
            @Html.HiddenFor(m => m.proposalFeesID);


            <div class="row pt-20">
                <div class="col-md-12 text-center">
                    <div class="col-md-4 text-right pt-5">
                        Page:
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.Newpages, new { @class = "form-control" })
                    </div>


                </div>
            </div>
            <div class="row pt-10">
                <div class="col-md-12 text-center">
                    <div class="col-md-4 text-right pt-5">
                        Amount:
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.Newamount, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row pt-10">
                <div class="col-md-12 text-center">
                    <div class="col-md-4 text-right pt-5">
                        Comment:
                    </div>
                    <div class="col-md-4">
                        @Html.TextAreaFor(m => m.comment, new { @class = "form-control", @rows = 5 })
                    </div>
                </div>
            </div>
            <div class="row pt-20">
                <div class="col-md-12 text-center">
                    <button type="submit" value="Submit" title="Submit" name="submit" class="btn btn-primary">
                        Submit
                    </button>
                </div>
            </div>

        }


    }
    else
    {
        <div class="row mt-20">
            <div class="col-lg-12 text-center">
                <label class="colorGreen">Your response has been successfully sent to Account Executive.</label>
            </div>
        </div>
    }
    <div class="footer text-muted text-center">
        &copy; @DateTime.Today.Year <a href="#">Axiom</a>, All Rights Reserved.
    </div>
</body>
</html>

<style type="text/css">
    .colorGreen {
        color: green;
        font-weight: bold;
    }
</style>