<div class="modal-dialog modal-md">
    <div class="modal-content">
        <div class="modal-header bg-main">
            <button type="button" class="close" data-dismiss="modal" title="Close">&times;</button>
            <h6 class="modal-title"><i class="icon-key mr-5"></i>Change Password</h6>
        </div>
        <div class="modal-body">
            <form class="form-horizontal" name="ChangePasswordForm" novalidate>
                <div class="modal-container pnl-back-grey">
                    <div id="messages">
                        <div class="alert alert-danger alert-dismissible validationErrors" ng-show="(ChangePasswordForm.$submitted && !ChangePasswordForm.$valid)">
                            <ul ng-show="(ChangePasswordForm.$submitted && (!ChangePasswordForm.$valid))">
                                <li ng-show="ChangePasswordForm.Password.$error.required">Please enter Password.</li>
                                <li ng-show="ChangePasswordForm.ConfirmPassword.$error.required">Please enter Confirm Password.</li>
                            </ul>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-10">
                            <label class="col-sm-4 control-label lbl-primary required">Password</label>
                            <div class="col-sm-8">
                                <input type="password" name="Password" class="form-control" maxlength="20" ng-model="objUserProfile.Password" required />
                            </div>
                        </div>
                        <div class="col-md-12 mb-10">
                            <label class="col-sm-4 control-label lbl-primary required">Confirm Password</label>
                            <div class="col-sm-8">
                                <input type="password" name="ConfirmPassword" class="form-control" maxlength="20" ng-model="objUserProfile.ConfirmPassword" required />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer mt-10">
                     <button type="button" title="Close" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" title="Save" ng-click="ChangePassword(ChangePasswordForm)" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>


    </div>
</div>



